<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/miHome">

    <action
        android:id="@+id/action_main_to_trackingFragment"
        app:destination="@id/trackingFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/miHome"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/miHome"
        android:name="com.example.clicktorun.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_miHome_to_trackingFragment"
            app:destination="@id/trackingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/miHome"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/miInsights"
        android:name="com.example.clicktorun.ui.insights.InsightsFragment"
        android:label="fragment_insights"
        tools:layout="@layout/fragment_insights" />
    <fragment
        android:id="@+id/miLeaderboard"
        android:name="com.example.clicktorun.ui.leaderboard.LeaderboardFragment"
        android:label="fragment_leaderboard"
        tools:layout="@layout/fragment_leaderboard" />
    <fragment
        android:id="@+id/miSettings"
        android:name="com.example.clicktorun.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.example.clicktorun.ui.tracking.TrackingFragment"
        android:label="fragment_tracking"
        tools:layout="@layout/fragment_tracking" >
        <action
            android:id="@+id/action_trackingFragment_to_miHome"
            app:destination="@id/miHome"
            app:popUpTo="@id/trackingFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>